{
    "additionalProperties": false,
    "javaType": "es.eucm.ead.schema.components.Shader",
    "type": "object",
    "extends": {
        "$ref": "component.json"
    },
    "properties": {
        "uri": {
            "type": "string",
            "description": "Uri of the file with the fragment shader"
        },
        "uniforms": {
            "type": "array",
            "items": {
                "$ref": "../data/parameter.json"
            }
        },
        "needsTime": {
          "type": "boolean",
          "description": "If true, this shader will pass a 'time' uniform in seconds"
        },
        "needsResolution": {
          "type": "boolean",
          "description": "If true, this shader will pass a 'resolution' uniform"
        }
    },
    "description": "Shader for the entity"
}