<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<relativePath>../../pom.xml</relativePath>
		<artifactId>eadventure</artifactId>
		<groupId>es.e-ucm.ead</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<name>Engine Schema</name>
	<artifactId>engine-schema</artifactId>
	<description>eAdventure schema, containing all the JSON Schema (and Java classes generated from them) representing
        the existing elements in the eAdventure game model.
    </description>

	<properties>
		<ver.package.dir>es/eucm/ead/schema</ver.package.dir>
		<ver.package.name>es.eucm.ead.schema</ver.package.name>
		<ver.class.name>Version</ver.class.name>
		<ver.buildtime>${maven.build.timestamp}</ver.buildtime>
		<ver.template.dir>src/main/resources/version</ver.template.dir>
		<ver.template.file>Version.java.template</ver.template.file>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>version/*</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>${ver.template.dir}</directory>
				<includes>
					<include>*.java</include>
				</includes>
				<filtering>true</filtering>
				<targetPath>${project.build.directory}/generated-sources/pom/${ver.package.dir}</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.build.directory}/generated-sources/pom/</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>